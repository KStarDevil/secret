<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/themeColor"
    tools:context=".ui.admin_add_menu.AddMenuFragment">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/admin_save_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="307dp"
            android:background="@color/white"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circle_image_view"
                android:layout_width="112dp"
                android:layout_height="112dp"
                android:layout_gravity="center"
                android:layout_marginTop="110dp"
                android:elevation="3dp"
                android:src="@drawable/ic_camera_alt_green_24dp" />

            <Button
                android:id="@+id/choose_photo_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:fontFamily="@font/raleway_semibold"
                android:text="Choose Image"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/themeColor"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_food_menu_name"
                style="@style/customEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:hint="Enter food name"
                android:outlineProvider="none" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_food_menu_type"
                style="@style/customEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:hint="Enter food type"
                android:outlineProvider="none" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_food_menu_price"
                style="@style/customEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:hint="Enter food price"
                android:outlineProvider="none" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_food_menu_available"
                style="@style/customEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:hint="Enter available branch"
                android:outlineProvider="none" />

            <Button
                android:id="@+id/save_menu_button"
                style="@style/ykkoButtonWhite"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="SAVE" />
        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/saving_loading_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="168dp"
        android:layout_marginTop="312dp"
        android:layout_marginEnd="167dp"
        android:visibility="gone" />
</RelativeLayout>
</ScrollView>